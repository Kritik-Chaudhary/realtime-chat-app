{
  "install": "npm install",
  "start": "npm start",
  "watch": {
    "ignore": [
      "\\.log$",
      "^logs/",
      "^node_modules/"
    ],
    "install": {
      "include": [
        "^package\\.json$",
        "^shrinkwrap\\.yaml$"
      ]
    },
    "restart": {
      "exclude": [
        "^public/",
        "^dist/"
      ],
      "include": [
        "\\.js$",
        "\\.json$"
      ]
    }
  }
}
